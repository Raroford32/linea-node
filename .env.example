# Linea Node Configuration
# Copy this file to .env and configure your settings

# Public IP address (auto-detected if not set)
PUBLIC_IP=127.0.0.1

# Domain configuration (optional - if you want to use a domain instead of IP)
# Set this to your domain name if you have one configured
DOMAIN_NAME=

# Setup type (basic, high-performance, development)
SETUP_TYPE=high-performance

# Installation date (auto-set during installation)
INSTALL_DATE=

# SSL/TLS Configuration (optional)
# Set to true if you want to enable HTTPS (requires valid SSL certificates)
ENABLE_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Performance tuning (high-performance mode only)
# JVM memory settings for Besu nodes
BESU_MEMORY_MIN=4g
BESU_MEMORY_MAX=8g

# Redis memory limit
REDIS_MEMORY=512mb

# Network optimization
ENABLE_NETWORK_OPTIMIZATION=true